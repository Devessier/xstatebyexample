---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { css } from "../../styled-system/css";
import { grid } from "../../styled-system/patterns";

const examples: Array<{
  href: string;
  name: string;
  imageUrl: string;
  width: number;
  height: number;
}> = [
  {
    href: "/debouncing",
    name: "Debouncing",
    imageUrl:
      "https://stately.ai/registry/machines/a7c3c647-5016-4f7a-abfe-bcd150916f78.light.png",
    width: 709,
    height: 600,
  },
  {
    href: "/debouncing",
    name: "Debouncing",
    imageUrl:
      "https://stately.ai/registry/machines/a7c3c647-5016-4f7a-abfe-bcd150916f78.light.png",
    width: 709,
    height: 600,
  },
  {
    href: "/debouncing",
    name: "Debouncing",
    imageUrl:
      "https://stately.ai/registry/machines/a7c3c647-5016-4f7a-abfe-bcd150916f78.light.png",
    width: 709,
    height: 600,
  },
  {
    href: "/debouncing",
    name: "Debouncing",
    imageUrl:
      "https://stately.ai/registry/machines/a7c3c647-5016-4f7a-abfe-bcd150916f78.light.png",
    width: 709,
    height: 600,
  },
];
---

<Layout title="XState by Example">
  <header>
    <div
      class={css({
        ml: "auto",
        mr: "auto",
        maxW: "7xl",
        pl: "4",
        pr: "4",
        sm: { pl: "6", pr: "6" },
        lg: { pl: "8", pr: "8" },
      })}
    >
      <h1
        class={css({
          fontSize: "3xl",
          lineHeight: "tight",
          fontWeight: "bold",
          letterSpacing: "tight",
          color: "gray.900",
        })}
      >
        Examples
      </h1>
    </div>
  </header>
  <main class={css({ mt: "8" })}>
    <div
      class={css({
        ml: "auto",
        mr: "auto",
        maxW: "7xl",
        pl: "4",
        pr: "4",
        sm: { pl: "6", pr: "6" },
        lg: { pl: "8", pr: "8" },
      })}
    >
      <div class={grid({ columns: [1, 2, null, 3], gap: "4" })}>
        {
          examples.map(({ href, name, imageUrl, width, height }) => (
            <div
              class={css({
                pos: "relative",
                shadow: "md",
                bg: "white",
                rounded: "xl",
                p: "4",
              })}
            >
              <Image
                src={imageUrl}
                alt=""
                {width}
                {height}
                class={css({
                  aspectRatio: "wide",
                  objectFit: "cover",
                  bg: "#f5f7f7",
                  rounded: "md",
                  borderStyle: "solid",
                  borderWidth: "2px",
                  borderColor: "gray.300",
                })}
              />

              <p
                class={css({ mt: "3", fontSize: "xl", fontWeight: "semibold" })}
              >
                {name}
              </p>

              <a href={href} class={css({ pos: "absolute", inset: "0" })} />
            </div>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
