---
import type { MachineComplexity } from "../lib/types";
import AppBadge from "./AppBadge.astro";

interface Props {
  complexity: MachineComplexity;
}

const { complexity } = Astro.props;
---

<AppBadge
  color={complexity === "advanced"
    ? "red"
    : complexity === "intermediate"
      ? "yellow"
      : "green"}
>
  {complexity.charAt(0).toUpperCase() + complexity.slice(1)}
</AppBadge>
